@model EShop.Models.Item

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Title</h2>
<p>
    <img alt="@Model.Title"
         src="@Model.Image" />
</p>
<div id="item-details">
    <p>
        <em>Category:</em>
        @Model.Category.Name
    </p>
    <p>
        <em>Producer:</em>
        @Model.Product.Name
    </p>
    <p>
        <em>Price:</em>
        @String.Format("{0:F}", Model.Price)
    </p>
    <p class="button1">
        @Html.ActionLink("Add to cart", "AddToCart",
        "ShoppingCart", new { id = Model.ItemId }, "")
    </p>
    <div class="fb-comments" data-width="230" data-numposts="5"></div>
</div>

